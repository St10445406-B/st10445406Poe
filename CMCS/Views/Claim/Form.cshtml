@{
    ViewBag.Title = "Submit Claim";
}

<link rel="stylesheet" href="~/css/site.css" />

<div class="container">
    <h1 class="page-title">Submit a Claim</h1>

    <form method="post" action="/Claims/Submitted" enctype="multipart/form-data">
        <div class="form-group">
            <label for="ClaimNumber">Claim Number</label>
            <input type="text" id="ClaimNumber" class="form-control" placeholder="Enter claim number" />
        </div>

        <div class="form-group">
            <label for="LecturerName">Lecturer Name</label>
            <input type="text" id="LecturerName" class="form-control" placeholder="Enter lecturer name" />
        </div>

        <div class="form-group">
            <label for="Amount">Amount</label>
            <input type="number" id="Amount" class="form-control" placeholder="Enter amount" />
        </div>

        <div class="form-group">
            <label for="DateSubmitted">Date Submitted</label>
            <input type="date" id="DateSubmitted" class="form-control" />
        </div>

        <div class="form-group">
            <label for="SupportingDoc">Upload Supporting Document</label>
            <input type="file" id="SupportingDoc" class="form-control" />
        </div>

        <button type="submit" class="btn">Submit Claim</button>
    </form>
</div>
