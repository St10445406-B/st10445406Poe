@{
    ViewBag.Title = "Dashboard";
}


<div class="container">
    <h1 class="page-title">Dashboard</h1>

    <div class="parent">
        <div class="div1 box">
            <h2>Lecturers</h2>
            <p>Manage and view lecturer information.</p>
            <form asp-controller="Lecturer" asp-action="Index" method="get">
                <button type="submit" class="btn">Go to Lecturers</button>
            </form>
        </div>

        <div class="div3 box">
            <h2>Claims</h2>
            <p>Submit, verify, and approve claims.</p>
            <form asp-controller="Claim" asp-action="Index" method="get">
                <button type="submit" class="btn">Go to Claims</button>
            </form>
        </div>

        <div class="div4 box">
            <h2>Status Tracking</h2>
            <p>Track claim progress and settlements.</p>
            <form asp-controller="Claim" asp-action="Status" method="get">
                <button type="submit" class="btn">Track Status</button>
            </form>
        </div>
    </div>
</div>
